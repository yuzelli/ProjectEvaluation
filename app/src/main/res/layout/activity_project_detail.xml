<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.example.yuzelli.projectevaluation.view.activity.ProjectDetailActivity">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"


            android:layout_centerInParent="true"
            android:text="项目详情"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/rl_head"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="项目缺陷"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="质量报告"/>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
    android:layout_width="match_parent"
    android:layout_height="0.5dp" android:layout_below="@+id/ll_title"
    android:background="@color/white"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/v_line"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_defect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:divider="@color/yellow"
            android:dividerHeight="0.5dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ListView
            android:id="@+id/lv_quality"
            android:layout_width="0dp"
            android:divider="@color/yellow"
            android:dividerHeight="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
